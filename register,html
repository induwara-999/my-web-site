<body>

    <div id="statusMessage" class="message-box">
        Register successful✅✅
    </div>

    <div class="container" id="registrationForm">
        <h2>New Registration (Register)</h2> 
        
        <form onsubmit="handleRegistration(event)">
            <label for="username">User Name:</label>
            <input type="text" id="username" name="username" required>
            
            <label for="email">Email:</label>
            <input type="text" id="email" name="email" required>
            
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
            
            <button type="submit">Register Now</button>
        </form>
    </div>

    <script>
        function handleRegistration(event) {
            // 1. Prevent the form's default submission behavior
            event.preventDefault(); 

            // 2. Hide the Registration Form
            const formContainer = document.getElementById('registrationForm');
            formContainer.style.display = 'none';

            // 3. Show the Success Message
            const messageBox = document.getElementById('statusMessage');
            messageBox.style.display = 'block';

            // 4. Auto Redirect to the Home page after 3 seconds
            const delayInMilliseconds = 3000; // 3000ms = 3 seconds
            
            setTimeout(() => {
                // Change 'home.html' to your actual Home Page URL
                window.location.href = 'home.html'; 
            }, delayInMilliseconds);
            
            // Note: In a real application, this is where you would make an
            // AJAX/Fetch API call to a server-side script for actual registration.
        }
    </script>
